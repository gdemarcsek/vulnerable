#include <abstractions/python>
#include <abstractions/user-tmp>

# Network access
network inet tcp,

# For DNS
network inet udp,
/etc/machine-id 			r,
/etc/mime.types 			r,
/etc/nsswitch.conf                  r,
/etc/resolv.conf                    r,
/etc/host.conf               r, 
/run/resolvconf/resolv.conf          r,
/etc/hosts r,

# Python modules
@{APP_HOME}/*.{py,pyc} 		rl,
@{APP_HOME}/virtualenv/** 		mr,
@{APP_HOME}/virtualenv/bin/python 	rix,

# Config files
audit @{APP_HOME}/config.cfg 	r,

# Misc
@{PROC}/@{pid}/** 			r,
/run/uuidd/request 			rw,
/sys/** 				r,
/etc/passwd     r,    # needed by getpwuid() in os.path.expanduser() used by many module loaders including the one in botocore

# Signals
signal send set = (quit int),
